<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>be.unamur.typhonevo</groupId>
	<artifactId>typhonevo</artifactId>
	<version>0.1.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>be.unamur.typhonevo.backend</module>
		<module>be.unamur.typhonevo.rest-api</module>
	</modules>

	<properties>
		<tycho-version>1.3.0</tycho-version>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<repositories>
		<repository>
			<id>epsilon</id>
			<url>http://download.eclipse.org/epsilon/updates//</url>
			<snapshots>
	            <updatePolicy>always</updatePolicy>
	        </snapshots>
			<layout>p2</layout>
		</repository>
		<repository>
			<id>kepler</id>
			<url>http://download.eclipse.org/releases/2018-12</url>
			<snapshots>
	            <updatePolicy>always</updatePolicy>
	        </snapshots>
			<layout>p2</layout>
		</repository>
		<repository>
			<id>xtext</id>
			<url>http://download.eclipse.org/modeling/tmf/xtext/updates/releases/2.16.0/</url>
			<snapshots>
	            <updatePolicy>always</updatePolicy>
	        </snapshots>
			<layout>p2</layout>
		</repository>
		<repository>
			<id>mwe</id>
			<url>http://download.eclipse.org/modeling/emft/mwe/updates/releases/2.9.1/</url>
			<snapshots>
	            <updatePolicy>always</updatePolicy>
	        </snapshots>
			<layout>p2</layout>
		</repository>
		<repository>
			<id>emf</id>
			<url>http://download.eclipse.org/modeling/emf/emf/builds/release</url>
			<snapshots>
	            <updatePolicy>always</updatePolicy>
	        </snapshots>
			<layout>p2</layout>
		</repository>
		<repository>
            <id>typhonML</id>
            <url>
                /home/jeromefink/Documents/unamur/Typhon/typhonml/it.univaq.disim.typhonml.parent/releng/it.univaq.disim.typhonml.update/target/repository
            </url>
            <snapshots>
                <updatePolicy>always</updatePolicy>
            </snapshots>
            <layout>p2</layout>
        </repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
		</plugins>
	</build>

</project>